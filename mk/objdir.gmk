# Do these checks to assert assumption that these variables do not end in /
ifneq ($(realpath ${PROJECT_ROOT}),${PROJECT_ROOT})
$(error Malformed or nonexistant PROJECT_ROOT)
endif
ifneq ($(abspath ${PREFIX}),${PREFIX})
$(error Malformed PREFIX)
endif

ifneq (${MAKEOBJDIRPREFIX},)
OBJDIR?=${MAKEOBJDIRPREFIX}/$(subst ${PROJECT_ROOT}/,,${CURDIR})
else
OBJDIR?=${CURDIR}/obj
endif

